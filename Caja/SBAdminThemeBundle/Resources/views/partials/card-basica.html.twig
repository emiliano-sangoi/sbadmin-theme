<div class="card shadow-sm {{ card_basica_css|default('') }} rounded-0">
    <div class="card-header bg-{{ header_bg|default('pewter') }} border border-{{ header_bg|default('pewter') }} text-{{ header_text_color|default('brilliant-white') }} rounded-0">
        <div class="row px-0">
            <div class="col-9">
                {% block icon %}
                    {% if card_header_icon is defined %}
                        <i class="{{ card_header_icon }}"></i>
                    {% endif %}
                {% endblock %}
                <span class="fw-bold">
                {% block card_header %}
                    {{ card_header_content|default('Header') }}
                {% endblock %}
                    </span>
            </div>
            <div class="col-3 text-end pr-0">
                {% block card_actions %}

                    {% if codigo_ayuda|default(false) %}
                        <span class="d-inline-block">
                            {% from '@CajaSBAdminTheme/macros.html.twig' import link_ayuda %}
                            {{ link_ayuda(codigo_ayuda) }}
                        </span>
                    {% endif %}

                    <span class="d-inline-block mx-1">
                        {% block eliminar_action %}
                        {% endblock %}
                    </span>

                    {% if dropdown_visible|default(false) %}
                        <div class="dropdown d-inline-block">
                            <a class="dropdown-toggle p-0" style="cursor: pointer;"
                               id="{{ dropdown_id|default('dropdownId') }}Button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                {#                            <i class="bi-caret-down-fill small"></i> #}
                                {#                            <i class="bi-three-dots small"></i> #}
                                {#                                <i class="bi-list small text-light"></i> #}
                                <i class="bi-three-dots-vertical small text-light"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="{{ dropdown_id|default('dropdownId') }}Button"
                                 style="z-index: 100000 !important;">
                                {% block dropdown_items %}
                                    {# <a class="dropdown-item text-dark" href="#">Action</a>
                                    <a class="dropdown-item text-dark" href="#">Another action</a>
                                    <a class="dropdown-item text-dark" href="#">Something else here</a> #}
                                {% endblock %}
                            </div>
                        </div>
                    {% endif %}


                {% endblock %}
            </div>
        </div>


    </div>

    <div class="card-body {{ card_body_padding is defined ? card_body_padding : 'p-3 p-md-4' }}">
        {#    <div class="card-body "> #}
        {% block card_body %}
            <h3 class="card-title">
                {{ card_title }}
            </h3>
            {% if card_subtitle is defined %}
                <h6 class="card-subtitle mb-2 text-muted">
                    {{ card_subtitle }}
                </h6>
            {% endif %}
            <p class="card-text">
                {{ card_text|default("Some quick example text to build on the card title and make up the bulk of the card's content.") }}
            </p>
            {% block card_links %}
                <a href="#" class="card-link">
                    Card link
                </a>
                <a href="#" class="card-link">
                    Another link
                </a>
            {% endblock card_links %}
        {% endblock card_body %}

        <div class="card-paginado">
            {% block card_paginado %}
            {% endblock %}
        </div>
    </div>


    <div class="">
        {% block card_footer %}

        {% endblock %}
    </div>


</div>