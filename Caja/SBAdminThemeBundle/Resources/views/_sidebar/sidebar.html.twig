<div id="main-sidebar" class="btn-group-vertical w-100" role="group" aria-label="Barra de navegaciÃ³n">

    {% for item in sidebarItems %}
        <a class="btn {{ item.getCss() }} py-2 sidebar-item mb-2" 
           href="{{ item.getHref() }}" title="{{ item.getTitle() }}" {{ item.targetBlank ? "target='_blank'" : '' }} >            

            {% if item.showIcon()  %}
                <i class="{{ item.getIcon() }} {{ item.getIconCss() }} mr-1 align-middle" title="{{ item.getIconTitle() }}"></i>
            {% endif %}
            <span class="align-middle">
            {{ item.getLabel() }}
            </span>
        </a>

    {% endfor %}
</div>